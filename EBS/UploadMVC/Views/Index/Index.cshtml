
@{
  Layout = null;
}

<!DOCTYPE html>

<html>
<head>
  
  <link href="~/Content/bootstrap.min.css" rel="stylesheet"/>
  <link href="~/Content/StyleSheetLayout.css" rel="stylesheet" />
  <link href="~/Content/bootstrap.css" rel="stylesheet"/>
  <meta name="viewport" content="width=device-width"/>
  <title>Home Upload</title>
</head>
<body>
@using (Html.BeginForm("Upload", "Index", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
  <form id="form1">
    <div class="container">

      <div class="jumbotron" style="text-align: center">
        <h2 >FILE UPLOADER</h2>

        First name: <input type="text" name="fname"><br>
        Last name: <input type="text" name="lname"><br>
        E-mail: &nbsp; &nbsp; &nbsp; <input type="email" name="email"><br/>


        <input type="file" name="file" value="fileupload" id="file" class="inputf">
        <label for="file" class="label1"> Select a docx file to upload</label><br/>


        <input type="file" name="pdfupload" value="fileupload" id="pdfupload" class="inputf">
        <label for="pdfupload" class="label1"> Select a pdf file to upload</label><br/>


        <input type="file" name="pngupload" value="fileupload" id="pngupload" class="inputf">
        <label for="pngupload" class="label1"> Select a png file to upload</label>


        <div style="padding-top: 20px">
          <input type="submit" class="btn btn-primary btn-md" value="Upload">
        </div>
      </div>
    </div>
  </form>
}
</body>
</html>
